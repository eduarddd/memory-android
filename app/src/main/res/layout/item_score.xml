<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_ranking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        tools:text="1"/>

    <TextView
        android:id="@+id/tv_label_time_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@id/tv_ranking"
        app:layout_constraintEnd_toStartOf="@id/tv_label_flip_count"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/time" />

    <TextView
        android:id="@+id/tv_time_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_label_time_count"
        app:layout_constraintStart_toStartOf="@id/tv_label_time_count"
        tools:text="1:30" />

    <TextView
        android:id="@+id/tv_label_flip_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_label_time_count"
        app:layout_constraintStart_toEndOf="@id/tv_label_time_count"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/flips" />

    <TextView
        android:id="@+id/tv_flip_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_label_flip_count"
        app:layout_constraintStart_toStartOf="@id/tv_label_flip_count"
        tools:text="15" />

</android.support.constraint.ConstraintLayout>