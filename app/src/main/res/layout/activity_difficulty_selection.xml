<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/bt_difficulty_easy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EASY (4x4)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <Button
        android:id="@+id/bt_difficulty_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MEDIUM (6x6)"
        app:layout_constraintTop_toBottomOf="@id/bt_difficulty_easy"
        app:layout_constraintStart_toStartOf="@id/bt_difficulty_easy"
        app:layout_constraintEnd_toEndOf="@id/bt_difficulty_easy"/>

    <Button
        android:id="@+id/bt_difficulty_hard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HARD (8x8)"
        app:layout_constraintTop_toBottomOf="@id/bt_difficulty_medium"
        app:layout_constraintStart_toStartOf="@id/bt_difficulty_medium"
        app:layout_constraintEnd_toEndOf="@id/bt_difficulty_medium"/>



</android.support.constraint.ConstraintLayout>